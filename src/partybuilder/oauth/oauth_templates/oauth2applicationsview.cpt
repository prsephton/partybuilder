<div id='oauth2ApplicationView'>
  <p>Login using: </p>
  <ul>
  	<li tal:repeat="oa context.values()">
  		<a tal:attributes="href oa.authentication_uri(request)">
	  		<img tal:condition="oa.icon"
	  			tal:attributes="title oa.service; src view.url(oa, '@@icon')" />
			<span tal:condition="not:oa.icon" tal:content="oa.service" />
  		</a>
  	</li>
  </ul>
</div>
